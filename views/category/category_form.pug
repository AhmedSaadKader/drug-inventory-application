extends ../layout

block content
    .body 

        h1=title

        form(method="POST" action="")
            div.form-group
                label(for="name") Name: 
                input#name(type="text" placeholder="Category Name", name='name' value=(undefined===category ? '': category.name)) 
            button(type='submit') Submit

        if errors 
            ul 
                for error in errors 
                    li!=error.msg