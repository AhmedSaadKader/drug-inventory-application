extends ../layout

block content
    .body
        h1=title

        form(method="POST" action="")
            div.form-group
                input#name(type='text' placeholder="Company Name..." name="name" required="true" value=(undefined === company ? '': company.name))
            button(type="submit") Submit
        
        if errors 
            ul 
                for error in errors 
                    li #{error.msg}